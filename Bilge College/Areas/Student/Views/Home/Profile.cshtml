@model Bilge_College.Models.DTOs.Student.Review.ReviewStudentDetailsDTO
@{
    ViewData["Title"] = "View";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

                <div class="breadcrumbs-area">
                    <h3>Bilgilerim</h3>
                    <ul>
                        <li>
                            <a asp-action="Index">Anasayfa</a>
                        </li>
                        <li>Bilgilerim</li>
                    </ul>
                </div>
                <!-- Breadcubs Area End Here -->
                <!-- Student Details Area Start Here -->
                <div class="card height-auto">
                    <div class="card-body">
                        <div class="heading-layout1">
                        </div>
                        <div class="single-info-details">
                            <div class="item-img">
                                 @if (Context.Session.GetString("ProfileImage") == null)
                                    {
                                        <img src="/img/figure/student.jpg" alt="Student">
                                    }
                                    else
                                    {
                                        <img src="@Context.Session.GetString("ProfileImage")" alt="Photo">
                                    }  
                            </div>

                            <div class="item-content">
                                <div class="header-inline item-header">
                                    <h3 class="text-dark-medium font-medium">Hakkımda</h3>
                                    <div class="header-elements">
                                        <ul>
                                            <li><a asp-action="EditProfile"><i class="far fa-edit"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="info-table table-responsive">
                                    <table class="table text-nowrap">
                                        <tbody>
                                            <tr>
                                                <td>Adı:</td>
                                                <td class="font-medium text-dark-medium">@Model.FirstName</td>
                                            </tr>
                                            <tr>
                                                <td>Soyadı:</td>
                                                <td class="font-medium text-dark-medium">@Model.LastName</td>
                                            </tr>
                                            <tr>
                                                <td>Cinsiyeti:</td>
                                                <td class="font-medium text-dark-medium">@Model.Gender</td>
                                            </tr>
                                            <tr>
                                                <td>Doğum Tarihi:</td>
                                                <td class="font-medium text-dark-medium">@Model.BirthDate.ToString("dd/MM/yyyy")</td>
                                            </tr>
                                            <tr>
                                                <td>Mail Adresi:</td>
                                                <td class="font-medium text-dark-medium">@Model.Email</td>
                                            </tr>                                           
                                           
                                            <tr>
                                                <td>Sınıf:</td>
                                                <td class="font-medium text-dark-medium">@Model.Classroom.Grade - @Model.Classroom.Branch</td>
                                            </tr>  
                                            <tr>
                                                <td>Son Diploma Notu</td>
                                                <td class="font-medium text-dark-medium">@Model.AvarageScore</td>
                                            </tr>


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
